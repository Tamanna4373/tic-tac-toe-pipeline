pipeline {
    agent any

    environment {
        FIREBASE_DEPLOY_TOKEN = credentials('firebase-token')
    }

    stages {
        stage('Testing') {
            steps {
                sh '/usr/local/bin/firebase deploy -P tic-tac-toe-testing --token "$FIREBASE_DEPLOY_TOKEN"'
            }
        }

        stage('Staging') {
            steps {
                sh '/usr/local/bin/firebase deploy -P tic-tac-toe-staging --token "$FIREBASE_DEPLOY_TOKEN"'
            }
        }

        stage('Production') {
            steps {
                sh '/usr/local/bin/firebase deploy -P tic-tac-toe-production --token "$FIREBASE_DEPLOY_TOKEN"'
            }
        }
    }
}
